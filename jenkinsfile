pipeline {
    agent any 
    tool {
        maven "maven123'
    }
    options {
        timeout(10)
        timestamps
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build') {
            steps {
                sh "maven clean install"
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
        }
        post {
            always {
                junit 'target/surefire-reports/*.xml'
            }
        }
        stage ('Delivery') {
            steps {
                 sh './jenkins/scripts/deliver.sh'
            }
        }
    }
}
